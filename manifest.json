{
    "manifest_version": 3,
    "name": "Email Capture",
    "version": "1.4.2",
    "description": "Finds and displays emails from the current page. And making it easy to copy and save.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon_16.png",
            "48": "images/icon_48.png",
            "128": "images/icon_128.png"
        }
    },
    "icons": {
        "16": "images/icon_16.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },
    "homepage_url": "https://www.arunsyoga.in", 
    "author": "HashPalLabs"
}
